
<h1 class="container"></h1>

<div col col-md-8>
<ul>
<% @activities.each do |activity| %>

  <%if activity.trackable_type == "Post"%>
  <li><%= image_tag activity.trackable.zombie.image.url(:thumb), class:"profile-img" %>
		<%= activity.trackable.zombie.username + " posted " + activity.trackable.content %></li>
<% end %>

<%end %>
</ul>
</div>

<div col-6 col-sm-4>

<%= pie_chart @zombies.group(:fav_hot_sauce).count %>
</div>