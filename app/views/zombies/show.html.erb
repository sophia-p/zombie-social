<div class="row">
<div class="col-lg-6 col-sm-6">
  <div class="profile-column">
    <div class="header-board">

    <% if @zombie.image %>
      <%= image_tag @zombie.image.url(:medium), class:"img-thumbnail img-responsive" %>
      <% end %> 
  
    </div>

   
  </div>

</div>
<div class="col-lg-6 col-sm-6">
  <div>
  <ul class="list-group">
    <% @posts.each do |post| %>
    <li class="list-group-item"><%=post.content%></li>
    <% end %>
  </ul>
  </div>
</div>
  <div class="well">
    <%= render 'shared/post_new'%>
    
  </div>

  
</div>
